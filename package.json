    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250830.0",
    "wrangler": "^4.4.0",
    "@biomejs/biome": "^2.1.0",
    "@types/bun": "latest"
  }
}